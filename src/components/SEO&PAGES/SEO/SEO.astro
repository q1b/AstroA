---
const { canonicalURL } = Astro.props;
const formattedContentTitle = ' Divyamrit Web designer Portfolio ';
const imageSrc = '/assets/HomeIg.jpg?v=1';
// const imageSrc = '/pic.jpeg?v=1';

const canonicalImageSrc = new URL(imageSrc, Astro.site);;
const imageAlt = 'Divyamrit Img';
---

<!-- Goggle analytics -->
<meta name="google-site-verification" content="0cgHBDmTslAjyBG_I7Mdmj9nAeWPamoA1H1jA7iBJEA" />

<!-- Page Metadata -->
<link rel="canonical" href={canonicalURL}/>

<!-- OpenGraph Tags -->
<meta property="og:title" content={formattedContentTitle}/>
<meta property="og:type" content="article"/>
<meta property="og:url" content={canonicalURL}/>
<meta property="og:locale" content='en_US'/>
<meta property="og:image" content={canonicalImageSrc}/>
<meta property="og:image:alt" content={imageAlt}/>
<meta property="og:description" content='Fine detailed crafted portfolio website, to showcase my work .'/>
<meta property="og:site_name" content={formattedContentTitle}/>

<!-- Twitter Tags -->
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:site" content='XSukhpreet'/>
<meta name="twitter:title" content={formattedContentTitle}/>
<meta name="twitter:description" content='Fine detailed crafted portfolio website, to showcase my work .'/>
<meta name="twitter:image" content={canonicalImageSrc}/>
<meta name="twitter:image:alt" content={imageAlt}/>
