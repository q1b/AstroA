---
// src/layouts/BaseLayout.astro
const {title} = Astro.props;
import CustomDropdown from '../components/CustomDropdown.vue';
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
 <link rel="stylesheet" type="text/css" href="/global.css">
</head>
  <body>
    <!-- Adds a navigation bar to every page. -->
      <header class="h-24 p-4 flex place-content-between items-center">
        <div
            class="
                gap-2
                logo
                flex
                items-center
                rounded-lg
                hover:scale-[.99]
                transition-transform
            "
        >
            <div>
                <img class="w-10 h-10 object-cover" src="/assets/Logo.svg" />
            </div>
            <div class="flex w-max items-center">
                <h1
                    class="
                        text-xl
                        font-round
                        select-none
                        font-semibold
                        bg-gradient-to-br
                        from-cyan-200
                        to-purple-400
                        text-transparent
                        bg-clip-text
                    "
                >
                    Divyamrit
                </h1>
            </div>
        </div>
        <CustomDropdown client:visible ></CustomDropdown>
    </header>
    <!-- slot: your page content will be injected here. -->
    <slot />
  </body>
</html>