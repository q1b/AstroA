---
import { Markdown } from 'astro/components';
import BaseLayout from '../../layouts/project.astro';
let allProjects = Astro.fetchContent('../Projects/*.md');

function classNames(...classes) {
  return classes.filter(Boolean).join(' ')
}

let thisPage = {};

allProjects.forEach((p)=>{
  if(p.url===Astro.request.canonicalURL.pathname.replace('1p','P').slice(0, -1)){
    thisPage = p;
  }
})
console.log()
---
<BaseLayout content={{
  title: thisPage.title,
  subTitle: thisPage.subTitle,
  publishDate: thisPage.publishDate,
}}>
